<h2>Подробности о записи:</h2>
<br>
<% @results.each do |post| %>
	
	<blockquote>
  		<p><%= post['content'] %></p>
  		<footer>
  			<dl class="dl-horizontal"> 
	  			<dt style="width: 300px"> 
	  				Added at <%= post['create_date'] %> by 
	  				<cite>username</cite>
	  			</dt>
	  			<dd><a style="margin: 20px" href="/posts/<%=post['id']%>">Comments</a></dd>
  			</dl>	
  		</footer>
  	</blockquote>
  	<br>
	<h4>Comment:</h4>
	<form action="/posts/<%=post['id']%>" method="POST">
  	  <textarea id="comment"  class="form-control" name="posttext" style="width: 400px" rows="6" placeholder="Enter your comment here"></textarea>
	  <br>
	  <button type="submit" class="btn btn-info">Add comment</button>
	</form>
	
<% end %>